<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <item android:left="5dp" android:bottom="5dp">
                <shape>
                    <corners android:radius="10dp" />
                    <solid android:color="#222" />
                </shape>
            </item>
            <item android:bottom="5dp" android:left="2dp">
                <shape>
                    <gradient android:angle="270"
                        android:endColor="#4170F2" android:startColor="#4170F2" />
                    <stroke android:width="1dp" android:color="#4170F2" />
                    <corners android:radius="10dp" />
                    <padding android:bottom="1dp" android:left="10dp"
                        android:right="8dp" android:top="1dp" />
                </shape>
            </item>
        </layer-list>
    </item>

</selector>